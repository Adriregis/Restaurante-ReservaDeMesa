@model Restaurante.Models.Reserva

@{
    ViewData["Title"] = "Excluir Reserva";
}

<h1>Excluir Reserva</h1>

<h3>Você tem certeza que deseja excluir esta reserva?</h3>

<div>
    <h4>Reserva</h4>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nome do Cliente</dt>
        <dd class="col-sm-10">@Model.NomeCliente</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.TelefoneCliente</dd>

        <dt class="col-sm-2">Número de Pessoas</dt>
        <dd class="col-sm-10">@Model.NumeroPessoas</dd>

        <dt class="col-sm-2">Data da Reserva</dt>
        <dd class="col-sm-10">@Model.DataReserva.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

