@model Restaurante.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<h1>Editar Reserva</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NomeCliente" class="control-label">Nome do Cliente</label>
        <input asp-for="NomeCliente" class="form-control" />
        <span asp-validation-for="NomeCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelefoneCliente" class="control-label">Telefone</label>
        <input asp-for="TelefoneCliente" class="form-control" />
        <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroPessoas" class="control-label">Número de Pessoas</label>
        <input asp-for="NumeroPessoas" class="form-control" />
        <span asp-validation-for="NumeroPessoas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataReserva" class="control-label">Data da Reserva</label>
        <input asp-for="DataReserva" class="form-control" type="datetime-local" />
        <span asp-validation-for="DataReserva" class="text-danger"></span>
    </div>
    <div class="form-group mt-5">
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
